@{

    ViewData["Title"] = "Home Page";
}
<div>
    <form action="Create_exam2" method="post">
        <div class="container">
            <div class="row">
                <div class="col">
                    <select name="Title" class="form-control" id="select-box" onchange="myFunction()">
                        <option selected value="Lütfen Başlık Seçiniz...">Lütfen Başlık Seçiniz...</option>
                        @foreach (var item in ViewBag.list_of_praf)
                        {
                            <option value="@item.Text_title">@item.Text_title</option>
                        }
                    </select>
                    <hr />
                    <br />
                    <p id="Text_content">Lütfen başlık seçiniz...</p>
                    <input type="text" name="Text" id="Text_content_hidden" hidden value="Lütfen başlık seçiniz..." />
                </div>
            </div>
        </div>
        <hr />
        @for (int i = 1; i <= 4; i++)
        {
            
            <div class="row">
                <div class="col-12">
                    <input class="form-control" name="Quest" placeholder="Lütfen Soru giriniz" />
                    <br />
                </div>
                <br />
                <div class="col-6">
                    <input class="form-control" type="text" name="Option_a" value="" placeholder="A-)" />
                    <br />
                    <input class="form-control" type="text" name="Option_b" value="" placeholder="B-)" />
                </div>
                <div class="col-6">
                    <input class="form-control" type="text" name="Option_c" value="" placeholder="C-)" />
                    <br />
                    <input class="form-control" type="text" name="Option_d" value="" placeholder="D-)" />
                </div>
            </div>
            <br>
            <div class="container">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <select name="Answer" class="form-control">
                            <option selected value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
                        <br>
                    </div>
                    <div class="col"></div>
                </div>
            </div>

        }

        <div class="container">
            <div class="row">
                <div class="col">

                </div>
                <div class="col">
                    <button type="submit" class="btn btn-outline-dark btn-lg btn-block">SINAVI TAMAMLA AMK</button>
                </div>
                <div class="col">

                </div>
            </div>
        </div>
    </form>
</div>


@section scripts{

    <script>
        function myFunction() {
            var x = document.getElementById("select-box").value;
            document.getElementById("Text_content_hidden").value = x;
        }
    </script>


}